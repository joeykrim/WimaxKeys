<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" 
    android:scrollbarStyle="outsideOverlay" 
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:background="@drawable/backgroundport">
<TextView android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:text="WiMAX RSA Key Checker" 
	android:id="@+id/Welcome1"
	android:textSize="26sp"
	android:gravity="center"></TextView>
<TextView android:text="                                         " 
	android:id="@+id/Spacer1" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textSize="10sp"></TextView>
<TextView android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="Warning" 
	android:id="@+id/Warning"
	android:textSize="18sp"></TextView>
<TextView android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="@string/Warning" 
	android:id="@+id/WarningMsg"
	android:textSize="14sp"></TextView>
<View android:layout_width="fill_parent"
    android:layout_height="2dip" android:background="#FFFFFFFF" />
<TextView android:text="                                         " 
	android:id="@+id/Spacer2" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"></TextView>
<Button android:text="Verify Root Access"
	android:id="@+id/rootButton" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_gravity="center"></Button>
<Button android:text="Verify Busybox Installed" 
	android:id="@+id/busyboxButton"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:layout_gravity="center"></Button>
<Button android:text="Verify WiMAX RSA Key"
	android:id="@+id/wimaxButton" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_gravity="center"></Button>
<TextView android:text=" " 
	android:id="@+id/Spacer3" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:textSize="4sp"
	android:layout_gravity="center"></TextView>
<TextView android:text="Results: " 
	android:id="@+id/Results" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:textSize="18sp"></TextView>
<TextView android:text=" " 
	android:id="@+id/FinalResults" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textSize="20sp"
	android:layout_gravity="center"
	android:minLines="2"></TextView>
<TextView android:text=" " 
	android:id="@+id/Spacer3" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:textSize="4sp"
	android:layout_gravity="center"></TextView>
<View android:layout_width="fill_parent"
    android:layout_height="2dip" android:background="#FFFFFFFF" />
<TextView android:text="by joeykrim"
	android:id="@+id/joeykrim" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#ffffffff"></TextView>	
<Button android:text="Author Web Site" 
	android:id="@+id/authorButton" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"></Button>
<TextView android:text=" " 
	android:id="@+id/Spacer4" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:textSize="4sp"></TextView>	
<TextView android:text="@string/Credits"
	android:id="@+id/Credits" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:textColor="#ff000000"></TextView>
</LinearLayout>
</ScrollView>